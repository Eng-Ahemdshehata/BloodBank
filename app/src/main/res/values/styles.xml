<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/arabic</item>


    </style>

    <style name="LoginFragmentET">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:layout_marginBottom">@dimen/user_cycle_fl_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:background">@drawable/background_et</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="LoginFragmentBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">@dimen/user_cycle_fl_padding</item>
        <item name="android:background">@drawable/background_et</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:textSize">18sp</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="DonationDetailsLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dim_12dp</item>
        <item name="android:orientation">horizontal</item>

    </style>

    <style name="CheckboxTheme">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:buttonTint">@color/colorGreen</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


</resources>
